@model IEnumerable<WebPubApp.OrgBranch>

@{
    ViewBag.Title = "Index";
}

<h2>Organizations branches</h2>

<form asp-controller="OrgBranches" asp-action="Index">
    <p>
        Branch title: <input type="text" name="title" />
        <input type="submit" value="Search" />
    </p>
</form>

<p>
    @ViewBag.SearchInfo
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(x => x.Title))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
